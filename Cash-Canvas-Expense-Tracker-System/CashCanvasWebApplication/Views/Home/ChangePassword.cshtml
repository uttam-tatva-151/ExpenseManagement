@model ChangePasswordViewModel
@{
    Layout = Constants.LOGIN_LAYOUT;
    ViewData["Title"] = "Change Password";
    ViewData["BodyClass"] = "reset-password-page bg-body-secondary";
    ViewData["BoxClass"] = "reset-box";
}

<p class="reset-box-msg">Change your password</p>
<form asp-action="ChangePassword" asp-controller="Home" method="post">
    @* Optionally, include a hidden field for UserId or Token if needed *@
    @* <input type="hidden" asp-for="UserId" /> *@

    <div class="input-group mb-1">
        <div class="form-floating">
            <input id="currentPassword" asp-for="CurrentPassword" type="password" minlength="8" maxlength="17" class="form-control" placeholder="Current Password" required />
            <label for="currentPassword">Current Password</label>
        </div>
        <div class="input-group-text"><span class="bi bi-lock-fill"></span></div>
    </div>
    <span class="text-danger" asp-validation-for="CurrentPassword"></span>
    
    <div class="input-group mb-1">
        <div class="form-floating">
            <input id="newPassword" asp-for="NewPassword" type="password" minlength="8" maxlength="17" class="form-control" placeholder="New Password" required />
            <label for="newPassword">New Password</label>
        </div>
        <div class="input-group-text"><span class="bi bi-lock-fill"></span></div>
    </div>
    <span class="text-danger" asp-validation-for="NewPassword"></span>
    
    <div class="input-group mb-1">
        <div class="form-floating">
            <input id="confirmNewPassword" asp-for="ConfirmNewPassword" minlength="8" maxlength="17" type="password" class="form-control" placeholder="Confirm New Password" required />
            <label for="confirmNewPassword">Confirm New Password</label>
        </div>
        <div class="input-group-text"><span class="bi bi-lock-fill"></span></div>
    </div>
    <span class="text-danger" asp-validation-for="ConfirmNewPassword"></span>
    
    <div class="row">
        <div class="col-12">
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Change Password</button>
            </div>
        </div>
    </div>
</form>
<p class="mt-3 mb-0 text-center">
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary text-white w-100">Back to Home</a>
</p>