@{
    Layout = null;
    ViewData["Title"] = "Error";
    int statusCode = ViewData["StatusCode"] as int? ?? 500;
    string message = ViewData["Message"]?.ToString() ?? "Something went wrong!";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@statusCode - @message</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #e0e7ff 0%, #f1f5f9 100%);
            min-height: 100vh;
        }
        .brand-color {
            color: #2b4a7e;
        }
        .error-code {
            font-size: 9rem;
            font-weight: bold;
            color: #2b4a7e;
            text-shadow: 2px 4px 12px #b6c8e6;
        }
        .icon-bg {
            background: #fff;
            border-radius: 50%;
            padding: 25px;
            box-shadow: 0 4px 20px #b6c8e6;
            margin-bottom: 1rem;
        }
        .home-btn {
            background: #2b4a7e;
            color: #fff;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 25px;
            font-size: 1.1rem;
            font-weight: 500;
            margin-top: 2rem;
            transition: background 0.2s;
        }
        .home-btn:hover {
            background: #183059;
        }
        .subtitle {
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container d-flex flex-column justify-content-center align-items-center vh-100">
        <div class="icon-bg">
            <img src="~/assets/images/Logo_for_Cash_Canvas.png" alt="CashCanvas Logo" style="max-width:60px;">
        </div>
        <h1 class="fw-bold brand-color mb-2">CashCanvas Expense Tracker System</h1>
        <div class="error-code">@statusCode</div>
        <h2 class="brand-color fw-semibold">@message</h2>
        <p class="subtitle mb-4">Oops! Something went wrong while tracking your expenses.</p>
        <button onclick="window.location.href='@Url.Action("Index", "Authentication")'" class="home-btn">
            Return to Login
        </button>
        <p class="mt-3 subtitle">If the issue persists, please <a href="mailto:support@cashcanvas.com" class="brand-color">contact support</a>.</p>
    </div>
</body>
</html>